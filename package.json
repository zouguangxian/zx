{
  "name": "zx",
  "version": "7.2.2",
  "description": "A tool for writing better scripts.",
  "type": "module",
  "main": "./build/index.js",
  "types": "./build/index.d.ts",
  "typesVersions": {
    "*": {
      ".": [
        "./build/index.d.ts"
      ],
      "globals": [
        "./build/globals.d.ts"
      ],
      "experimental": [
        "./build/experimental.d.ts"
      ],
      "cli": [
        "./build/cli.d.ts"
      ],
      "core": [
        "./build/core.d.ts"
      ]
    }
  },
  "exports": {
    ".": {
      "import": "./build/index.js",
      "require": "./build-cjs/index.cjs"
    },
    "./globals": {
      "import": "./build/globals.js",
      "require": "./build-cjs/globals.cjs"
    },
    "./experimental": {
      "import": "./build/experimental.js",
      "require": "./build-cjs/experimental.cjs"
    },
    "./cli": {
      "import": "./build/cli.js"
    },
    "./core": {
      "import": "./build/core.js",
      "require": "./build-cjs/core.cjs"
    },
    "./package.json": "./package.json"
  },
  "bin": {
    "zx": "./build/cli.js"
  },
  "engines": {
    "node": ">= 16.0.0"
  },
  "scripts": {
    "fmt": "prettier --write .",
    "fmt:check": "prettier --check .",
    "build": "npm run build-default && npm run build-mjs && npm run build-cjs",
    "build-default": "tsc --project tsconfig.prod.json",
    "build-mjs": "tsup --target esnext --format esm --out-dir build-mjs src/index.ts src/globals.ts src/experimental.ts src/core.ts src/cli.ts",
    "build-cjs": "tsup --target esnext --format cjs --out-dir build-cjs src/index.ts src/globals.ts src/experimental.ts src/core.ts",
    "build:check": "tsc",
    "test": "npm run build && uvu test -i fixtures",
    "test:types": "tsd",
    "coverage": "c8 --check-coverage npm test -- -i package",
    "mutation": "stryker run",
    "circular": "madge --circular src/*",
    "version": "cat package.json | fx .version"
  },
  "dependencies": {
    "@types/fs-extra": "^11.0.1",
    "@types/minimist": "^1.2.2",
    "@types/node": "^18.16.3",
    "@types/ps-tree": "^1.1.2",
    "@types/which": "^3.0.0",
    "chalk": "^5.2.0",
    "fs-extra": "^11.1.1",
    "fx": "*",
    "globby": "^13.1.4",
    "minimist": "^1.2.8",
    "node-fetch": "3.3.1",
    "ps-tree": "^1.2.0",
    "webpod": "^0",
    "which": "^3.0.0",
    "yaml": "^2.2.2"
  },
  "devDependencies": {
    "@stryker-mutator/core": "^6.4.2",
    "c8": "^7.13.0",
    "esbuild": "^0.17.18",
    "madge": "^6.0.0",
    "prettier": "^2.8.8",
    "ts-node": "^10.9.1",
    "tsd": "^0.28.1",
    "tsup": "^6.7.0",
    "typescript": "^5.0.4",
    "uvu": "^0.5.6"
  },
  "publishConfig": {
    "registry": "https://wombat-dressing-room.appspot.com"
  },
  "files": [
    "build",
    "build-cjs",
    "zx.js"
  ],
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "endOfLine": "lf"
  },
  "repository": "google/zx",
  "author": "Anton Medvedev <anton@medv.io>",
  "license": "Apache-2.0"
}
